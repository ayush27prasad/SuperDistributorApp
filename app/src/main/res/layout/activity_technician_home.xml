<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TechnicianHomeActivity">


    <TextView
        android:id="@+id/welcometechniciantext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="Welcome Technician"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/totalpendecybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcometechniciantext"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="Total Number of Pendency" />

    <LinearLayout
        android:layout_below="@+id/totalpendecybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/techbtngroup1"
        android:orientation="horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/closecomplaint"
            android:text="Close Complaint"/>

        <Button
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/reschedulevisit"
            android:text="Reschedule Visit"/>

    </LinearLayout>

    <Button
        android:id="@+id/indentforsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/techbtngroup1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="Indent for Spares" />

    <Button
        android:id="@+id/technicianreportbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indentforsp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:text="Reports" />


</RelativeLayout>